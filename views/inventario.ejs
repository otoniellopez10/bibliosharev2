        <title>Inventario</title>
    </head>
    <body>
        <main id="contenedor__general">
            <div id="contenedor__menu"><%- include('admin-menu'); %></div>

            <div id="contenedor__contenido" class="p-4 px-5">
                <div class="titulo_pagina mb-4">
                    <h5 class="text-secondary">
                        Inventario
                        <i class="bi bi-clipboard fs-4 float-end"></i>
                    </h5>
                </div>

                <div class="text-end">
                    <button class="btn btn-iujo" id="btn_cont_1">
                        Agregar libro
                    </button>
                    <button class="btn btn-iujo" id="btn_cont_2">Lista</button>
                </div>

                <section id="cont_agregar_libro" class="mt-4">
                    <div class="card shadow-sm rounded-3">
                        <div class="card-body">
                            <h5
                                class="carta--titulo pb-2 border-bottom"
                                style="color: #555"
                            >
                                <i class="bi bi-journal-plus text-iujo-2"></i>
                                Agregar libro
                            </h5>

                            <!-- 
                                Cota
                                Título
                                Autor
                                Año
                                Editorial
                                Especialidad/Carrera
                                Cantidad de ejemplares
                             -->

                            <form
                                class="container"
                                autocomplete="off"
                                id="form_agregar-libro"
                            >
                                <div class="row">
                                    <!-- cota -->
                                    <div class="col-12 col-md-6 mb-3">
                                        <label for="i_cota" class="form-label"
                                            >Cota</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="i_cota"
                                            name="i_cota"
                                        />
                                    </div>
                                    <!-- ejemplares -->
                                    <div class="col-12 col-md-6 mb-3">
                                        <label
                                            for="i_ejemplares"
                                            class="form-label"
                                            >Ejemplares</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control solo-numeros"
                                            id="i_ejemplares"
                                            name="i_ejemplares"
                                            maxlength="3"
                                        />
                                    </div>
                                    <!-- titulo -->
                                    <div class="col-12 mb-3">
                                        <label for="i_titulo" class="form-label"
                                            >Título</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="i_titulo"
                                            name="i_titulo"
                                        />
                                    </div>
                                    <!-- editorial -->
                                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                                        <label
                                            for="i_editorial"
                                            class="form-label"
                                            >Editorial</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="i_editorial"
                                            name="i_editorial"
                                        />
                                    </div>
                                    <!-- especialidad -->
                                    <div class="col-12 col-md-6 col-lg-4 mb-3">
                                        <label
                                            for="i_carrera"
                                            class="form-label"
                                            >Carrera / Especialidad</label
                                        >
                                        <select
                                            class="form-select"
                                            aria-label="Seleciona la carrera"
                                            id="i_especialidad"
                                        >
                                            <option selected>
                                                Selecciona una especialidad
                                            </option>
                                            <option value="Administración">
                                                Administración
                                            </option>
                                            <option value="Contaduría">
                                                Contaduría
                                            </option>
                                            <option value="Informática">
                                                Informática
                                            </option>
                                            <option value="Electrónica">
                                                Electrónica
                                            </option>
                                            <option value="Electrotécnia">
                                                Electrotécnia
                                            </option>
                                            <option value="Mecánica">
                                                Mecánica
                                            </option>
                                            <option
                                                value="Educación Preescolar"
                                            >
                                                Educación Preescolar
                                            </option>
                                            <option value="Educación Integral">
                                                Educación Integral
                                            </option>
                                            <option value="Edicación Especial">
                                                Edicación Especial
                                            </option>
                                        </select>
                                    </div>
                                    <!-- fecha (año) -->
                                    <div class="col-md-12 col-lg-4 mb-3">
                                        <label
                                            for="i_ano"
                                            class="form-label solo-numeros"
                                            >Año</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="i_ano"
                                            name="i_ano"
                                            maxlength="4"
                                        />
                                    </div>

                                    <!-- Autor (es) -->
                                    <div class="col-8 col-md-10 mb-3">
                                        <label for="i_autor" class="form-label"
                                            >Autor(es)</label
                                        >
                                        <input
                                            type="text"
                                            class="form-control"
                                            id="i_autor"
                                            name="i_autor"
                                        />
                                    </div>
                                    <!-- btn agregar autor -->
                                    <div class="col-4 col-md-2 mb-3">
                                        <label
                                            for="btn_i_autor"
                                            class="form-label"
                                            >&nbsp;</label
                                        >
                                        <button
                                            type="button"
                                            class="form-control btn btn-iujo"
                                            id="btn_i_autor"
                                            name="btn_i_autor"
                                        >
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                    <div class="col-12">
                                        <table
                                            id="table_autores"
                                            class="table table-bordered"
                                            style="width: 100%"
                                        >
                                            <thead>
                                                <tr>
                                                    <th scope="col">
                                                        Nombre y apellido
                                                    </th>
                                                    <th scope="col">
                                                        Eliminar
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbody_autores"></tbody>
                                        </table>
                                    </div>

                                    <!-- checkbox de confirmacion -->
                                    <div
                                        class="col-12 mb-3 ms-2 mt-3 form-check"
                                    >
                                        <input
                                            type="checkbox"
                                            class="form-check-input"
                                            id="i_check"
                                        />
                                        <label
                                            class="form-check-label"
                                            for="i_check"
                                            >Confirmo que los datos ingresados
                                            son correctos</label
                                        >
                                    </div>

                                    <button
                                        type="submit"
                                        class="btn btn-iujo mt-1 disabled"
                                    >
                                        Enviar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

                <section id="cont_lista_libros" class="mt-3">
                    <div class="card shadow-sm rounded-3">
                        <div class="card-body">
                            <h5
                                class="carta--titulo pb-2 mb-4 border-bottom"
                                style="color: #555"
                            >
                                <i class="bi bi-clipboard text-iujo-2"></i>
                                Registro de libros
                            </h5>

                            <table
                                id="table_libros"
                                class="table table-bordered"
                                style="width: 100%"
                            >
                                <thead>
                                    <tr>
                                        <th scope="col">Cota</th>
                                        <th scope="col">Títutlo</th>
                                        <th scope="col">Autor(es)</th>
                                        <th scope="col">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>Mark</td>
                                        <td>Otto</td>
                                        <td>@mdo</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">2</th>
                                        <td>Jacob</td>
                                        <td>Thornton</td>
                                        <td>@fat</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">2</th>
                                        <td>Jacob</td>
                                        <td>Thornton</td>
                                        <td>@fat</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>

