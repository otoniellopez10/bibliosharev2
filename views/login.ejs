<!DOCTYPE html>
<html lang="es">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- Bootstrap CSS -->
        <link
            href="assets/bootstrap-5.1.3/css/bootstrap.min.css"
            rel="stylesheet"
        />
        <link
            rel="stylesheet"
            href="assets/icons-1.7.2/font/bootstrap-icons.css"
        />
        <link rel="stylesheet" href="assets/css/style.css" />
        <link rel="stylesheet" href="assets/css/login.css" />

        <title>Login</title>
    </head>
    <body>
        <div
            class="d-flex justify-content-center align-items-center"
            id="contenedor__general"
        >
            <form
                class="mx-auto bg-light shadow-lg"
                id="form-login"
                style="width: 60%"
            >
                <div class="row">
                    <!-- seccion de la izquierda -->
                    <div
                        class="col-lg-6 d-none d-lg-block p-4"
                        style="background-color: #990000"
                    >
                        <h4
                            class="d-inline-block text-light pb-1 mb-0"
                            style="border-bottom: 2px solid #fff"
                        >
                            Login
                        </h4>
                        <p class="text-white-50">
                            Sistema de gestión de líbros
                        </p>
                        <img
                            src="assets/images/iconos/login.svg"
                            alt=""
                            class="mx-auto my-4 d-block"
                            width="100%"
                        />
                    </div>

                    <!-- seccion de la derecha (formulario) -->
                    <div
                        class="col-12 col-lg-6 d-flex justify-content-center align-content-center flex-column"
                    >
                        <div class="col-12 px-3">
                            <label
                                for="i_user"
                                class="form-label fw-bold text-iujo"
                                >Nombre de usuario</label
                            >
                            <div class="input-group mb-3">
                                <span class="input-group-text" id=""
                                    ><i class="bi bi-person-fill text-iujo"></i
                                ></span>
                                <input
                                    type="text"
                                    class="form-control"
                                    id="i_user"
                                    aria-describedby="emailHelp"
                                />
                            </div>
                        </div>
                        <div class="col-12 px-3">
                            <label
                                for="i_password"
                                class="form-label fw-bold text-iujo"
                                >Contraseña</label
                            >
                            <div class="input-group mb-3">
                                <span class="input-group-text" id=""
                                    ><i class="bi bi-lock-fill text-iujo"></i
                                ></span>
                                <input
                                    type="password"
                                    class="form-control"
                                    id="i_password"
                                />
                            </div>
                        </div>
                        <div class="col-12 my-3 text-center">
                            <button
                                type="submit"
                                class="btn btn-primary btn-iujo"
                            >
                                Enviar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Optional JavaScript; choose one of the two! -->

        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="assets/bootstrap-5.1.3/js/bootstrap.bundle.min.js"></script>
        <script src="assets/js/login.js"></script>
    </body>
</html>
